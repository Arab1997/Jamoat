<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             tools:background="#fafafa">

    <ProgressBar
        android:id="@+id/loadmore_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>



    <LinearLayout
        android:id="@+id/loadmore_errorlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:visibility="gone"
        tools:visibility="visible">
        <RelativeLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="444dp"
            android:orientation="vertical"
            android:fitsSystemWindows="true">


            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="4dp">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_alignStart="@+id/container"
                    android:layout_alignLeft="@+id/container"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="171dp"
                        android:orientation="vertical"
                        android:paddingLeft="2dp">

                        <TextView

                            android:id="@+id/anime_name"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textSize="23sp"
                            android:background="#F5FFFFFF"
                            android:textStyle="bold" />
                        <View
                            android:layout_width="376dp"
                            android:layout_height="2dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginLeft="20dp"
                            android:background="#DBDBDB" />
                        <TextView
                            android:id="@+id/category_n"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginStart="0dp"
                            android:layout_marginLeft="0dp"
                            android:text=""
                            android:textSize="20sp"
                            android:textStyle="bold" />



                        <TextView
                            android:id="@+id/region_n"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="4dp"
                            android:text=""
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="376dp"
                            android:layout_height="2dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginLeft="20dp"
                            android:background="#DBDBDB" />

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="376dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textSize="16sp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="211dp"
                    android:layout_alignStart="@+id/container"
                    android:layout_alignLeft="@+id/container"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="2dp">

                    <TextView
                        android:id="@+id/tv_taklif"
                        android:layout_width="match_parent"
                        android:layout_height="204dp"
                        android:text=""
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="46dp"


                    android:padding="43dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:padding="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/btn_dislike"
                            android:layout_width="59dp"
                            style="?android:attr/buttonBarButtonStyle"
                            android:layout_height="37dp"
                            android:background="#FFFFFF"
                            android:tint="#AA0606"

                            tools:ignore="VectorDrawableCompat" />


                        <TextView
                            android:id="@+id/dislike"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginRight="15dp"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#AA0606"
                            android:textStyle="bold" />


                        <ImageButton
                            android:id="@+id/btn_like"
                            android:layout_width="52dp"
                            style="?android:attr/buttonBarButtonStyle"
                            android:layout_height="34dp"
                            android:background="#FFFFFF"
                            android:tint="#4CAF50"

                            tools:ignore="VectorDrawableCompat" />

                        <TextView
                            android:id="@+id/like"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginRight="15dp"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#4CAF50"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="57dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:background="#FFFFFF" />

                        <ImageButton
                            android:id="@+id/comments"
                            android:layout_width="48dp"
                            android:layout_height="35dp"
                            android:background="#FFFFFF"
                            android:tint="#5F6161"

                            tools:ignore="VectorDrawableCompat" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#050505" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>

</FrameLayout>